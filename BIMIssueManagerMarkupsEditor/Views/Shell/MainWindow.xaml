<Window x:Class="BIMIssueManagerMarkupsEditor.Views.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Shell"
        xmlns:converters="clr-namespace:BIMIssueManagerMarkupsEditor.Converters"
        mc:Ignorable="d"
        Title="BIM ISSUE MANAGER"
        WindowState="Maximized"
        MinWidth="800" MinHeight="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen" Icon="pack://application:,,,/Resources/Icons/logo.png"
        d:DataContext="{d:DesignInstance Type = local:MainViewModel, IsDesignTimeCreatable=True}">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                BorderThickness="0,0,0,0"
                BorderBrush="{StaticResource PrimaryBrush}">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo --><!--
                <Border BorderThickness="0"
                                      BorderBrush="{StaticResource PrimaryBrush}">
                    <StackPanel Grid.Column="0" Background="{StaticResource PrimaryBrush}"
                                Width="160">
                        <Image Source="{Binding LogoInIcon}"
                               Height="70" 
                               VerticalAlignment="Center" 
                               Margin="5,0"/>
                    </StackPanel>
                </Border>-->
                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{Binding UserFullName}" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" FontSize="16"/>
                    <TextBlock Text="{Binding UserCompany}" Foreground="{StaticResource PrimaryBrush}" FontSize="12"/>
                </StackPanel>

                <!-- Profile Button -->
                <hc:SplitButton Grid.Column="3" Margin="10"
                                Command="{Binding NavigateProfileCommand}"
                                Background="{StaticResource ContentBackgroundBrush}"
                                Height="45">

                    <Path Data="{StaticResource User}"
                          Fill="{StaticResource PrimaryBrush}"
                          Width="32"
                          Height="32"
                          Stretch="Uniform"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                    <hc:SplitButton.DropDownContent>
                        <StackPanel>
                            <MenuItem Header="Logout" Command="{Binding LogoutCommand}" Width="70"  />
                        </StackPanel>
                    </hc:SplitButton.DropDownContent>
                </hc:SplitButton>
            </Grid>
        </Border>

        <!-- Sidebar -->
        <Border Grid.RowSpan="2" Grid.Column="0" BorderThickness="0" BorderBrush="{StaticResource PrimaryBrush}">
            <StackPanel Background="{StaticResource PrimaryBrush}" 
                    Orientation="Vertical">

                <Image Source="{Binding LogoInIcon}"
                       Height="80"
                       Margin="10,10,10,25"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>

                <!--<RadioButton Content="Markup Editor"
                         GroupName="Nav"
                         Command="{Binding NavigateMarkupCommand}"
                         Style="{StaticResource SidebarIconRadioButtonStyle}"
                         Tag="{StaticResource Markup}" />-->

                <RadioButton Content="Profile"
                         GroupName="Nav"
                         Command="{Binding NavigateProfileCommand}"
                         Style="{StaticResource SidebarIconRadioButtonStyle}"
                         Tag="{StaticResource Profile}" />

                <RadioButton Content="Projects"
                         GroupName="Nav"
                         Command="{Binding NavigateProjectsCommand}"
                         Style="{StaticResource SidebarIconRadioButtonStyle}"
                         Tag="{StaticResource Project}" />
                <!--Visibility="{Binding IsCompanyAdmin, Converter={StaticResource BoolToVisibilityConverter}}"-->

                <RadioButton Content="Companies"
                         GroupName="Nav"
                         Command="{Binding NavigateCompaniesCommand}"
                         Style="{StaticResource SidebarIconRadioButtonStyle}"
                         Tag="{StaticResource Company}" />
                <!--Visibility="{Binding IsCompanyAdmin, Converter={StaticResource BoolToVisibilityConverter}}"-->

                <RadioButton Content="Teams"
                         GroupName="Nav"
                         Command="{Binding NavigateTeamsCommand}"
                         Style="{StaticResource SidebarIconRadioButtonStyle}"
                         Tag="{StaticResource Teams}" />

                <RadioButton Content="Issues"
                         GroupName="Nav"
                         Command="{Binding NavigateIssuesCommand}"
                         Style="{StaticResource SidebarIconRadioButtonStyle}"
                         Tag="{StaticResource Issues}" />

                <!--<RadioButton Content="Chat"
                         GroupName="Nav"
                         Command="{Binding NavigateChatCommand}"
                         Style="{StaticResource SidebarIconRadioButtonStyle}"
                         Tag="{StaticResource Chat}" />-->

                <RadioButton Content="Viewer"
                         GroupName="Nav"
                         Command="{Binding NavigateViewerCommand}"
                         Style="{StaticResource SidebarIconRadioButtonStyle}"
                         Tag="{StaticResource Viewer}" />
            </StackPanel>
        </Border>

        <!-- Main content area -->
        <ContentControl Grid.Row="1" Grid.Column="1"
                        Content="{Binding CurrentView}"
                        Margin="0,1,10,10" />
    </Grid>
</Window>
