<Window x:Class="BIMIssueManagerMarkupsEditor.Views.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Login"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="330"
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20" >
            <Image Source="{Binding LogoIcon}" Width="120" Height="120"/>
            <TextBlock Text="Welcome back!" FontSize="18" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Login to continue" FontSize="12" Foreground="#777" HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

            <TextBlock Text="Email" Margin="0 0 0 ,4" FontWeight="Bold"/>
            <hc:AutoCompleteTextBox
                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                Width="Auto"/>

            <TextBlock Text="Password" Margin="0 10 0 ,4" FontWeight="Bold"/>
            <hc:PasswordBox
                hc:InfoElement.Placeholder="Enter your password"
                x:Name="PasswordBox"
                Width="Auto"/>

            <StackPanel Orientation= "Horizontal">
                <Button Content="Login"
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=PasswordBox}"
                Style="{StaticResource ButtonPrimary}"
                Width="80"
                Margin="20"/>

                <Button Content="Cancel"
                Command="{Binding CancelCommand}"
                Style="{StaticResource ButtonDanger}"
                Width="80"
                Margin="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
