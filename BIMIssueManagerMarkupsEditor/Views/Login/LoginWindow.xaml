<Window x:Class="BIMIssueManagerMarkupsEditor.Views.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Login"
        mc:Ignorable="d"
        Title="LoginView" Height="360" Width="280"
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <hc:TextBox Text="&#xE77B;" FontSize="36" FontFamily="Segoe MDL2 Assets" />
            <TextBlock Text="Welcome back!" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,10,0,0" />
            <TextBlock Text="Login to continue" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" />
        </StackPanel>

        <!-- Form -->
        <hc:UniformSpacingPanel Grid.Row="1" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Spacing="12" 
                                Orientation="Vertical">

            <hc:AutoCompleteTextBox
                hc:InfoElement.Title="Email"
                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                Width="Auto"/>

            <hc:PasswordBox
                hc:InfoElement.Title="Password"
                Password="{Binding Password, Mode=TwoWay}"
                Width="Auto"/>

            <StackPanel Orientation= "Horizontal">
                <Button Content="Login"
                Command="{Binding LoginCommand}"
                Style="{StaticResource ButtonPrimary}"
                Width="80"
                Margin="15"/>

                <Button Content="Cancel"
                Command="{Binding CancelCommand}"
                Style="{StaticResource ButtonDanger}"
                Width="80"
                Margin="15"/>
            </StackPanel>
        </hc:UniformSpacingPanel>
    </Grid>
</Window>
