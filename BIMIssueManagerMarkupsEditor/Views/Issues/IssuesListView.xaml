<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.Issues.IssuesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Issues"
             xmlns:viewModels="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Issues"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:IssuesViewModel, IsDesignTimeCreatable=True}">

    <Grid Margin="20,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- TabControl -->
        </Grid.RowDefinitions>

        <!-- Filter Section -->
        <WrapPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Top" HorizontalAlignment="Left">
            <hc:ComboBox hc:InfoElement.Placeholder="Project"
                         Width="300"
                         Margin="0,10,10,10"
                         ItemsSource="{Binding Projects}"
                         SelectedItem="{Binding SelectedProject}" />

            <hc:ComboBox hc:InfoElement.Placeholder="Priority"
                         Width="300"
                         Margin="10"
                         ItemsSource="{Binding Priorities}"
                         SelectedItem="{Binding SelectedPriority}" />

            <hc:DatePicker hc:InfoElement.Placeholder="Date"
                           Width="300"
                           Margin="10"
                           SelectedDate="{Binding SelectedDate}" />

            <Button Style="{StaticResource ButtonPrimary}"
                    Command="{Binding ApplyFilterCommand}"
                    Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Path Width="16" Height="16"
                          Fill="White"
                          Stretch="Uniform"
                          Margin="0,0,8,0"
                          Data="{StaticResource Filter}" />
                    <TextBlock Text="Apply" VerticalAlignment="Center" Foreground="White" />
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ButtonDanger}"
                    Command="{Binding ResetFilterCommand}"
                    Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Path Width="16" Height="16"
                          Fill="White"
                          Stretch="Uniform"
                          Margin="0,0,8,0"
                          Data="{StaticResource Reset}" />
                    <TextBlock Text="Reset" VerticalAlignment="Center" Foreground="White" />
                </StackPanel>
            </Button>
        </WrapPanel>

        <!-- TabControl: Contains fixed All Issues tab + dynamic issue tabs -->
        <hc:TabControl Grid.Row="1" ShowCloseButton="True">
            <!-- Static tab: All Issues -->
            <hc:TabItem Header="All Issues" ShowCloseButton="False">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Issues}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <hc:Card Margin="0,0,13,13" Padding="8" Width="318" Height="250">
                                    <!-- Title -->
                                    <hc:Card.Header>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="{Binding Title}"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="5"/>
                                        </StackPanel>
                                    </hc:Card.Header>

                                    <!-- Snapshot Image -->
                                    <Button Command="{Binding DataContext.OpenIssueDetailsViewCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding .}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="0"
                                            Height="160"
                                            Width="220"
                                            Cursor="Hand">
                                        <Image Source="{Binding ImagePath}"
                                               Height="160"
                                               Margin="3"
                                               Stretch="Uniform"
                                               SnapsToDevicePixels="True"/>
                                    </Button>

                                    <!-- Footer -->
                                    <hc:Card.Footer>
                                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM dd, yyyy}'}"
                                                       Margin="5"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Priority}"
                                                       Foreground="#0078D7"
                                                       FontWeight="SemiBold"
                                                       Margin="5"/>
                                        </StackPanel>
                                    </hc:Card.Footer>
                                </hc:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </hc:TabItem>

            <!-- Dynamic issue tabs -->
            <hc:TabControl.ItemsSource>
                <CompositeCollection>
                    <CollectionContainer Collection="{Binding OpenIssueTabs}" />
                </CompositeCollection>
            </hc:TabControl.ItemsSource>

            <hc:TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Issue.Title}" />
                </DataTemplate>
            </hc:TabControl.ItemTemplate>

            <hc:TabControl.ContentTemplate>
                <DataTemplate>
                    <local:IssueDetailsTabView />
                </DataTemplate>
            </hc:TabControl.ContentTemplate>

            <hc:Interaction.Triggers>
                <hc:RoutedEventTrigger RoutedEvent="hc:TabItem.Closed">
                    <hc:EventToCommand Command="{Binding CloseIssueTabCommand}" CommandParameter="{Binding}" />
                </hc:RoutedEventTrigger>
            </hc:Interaction.Triggers>
        </hc:TabControl>
    </Grid>
</UserControl>
