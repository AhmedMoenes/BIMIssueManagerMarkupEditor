<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.Issues.IssuesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Issues"
             xmlns:viewModels="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Issues"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:IssuesViewModel, IsDesignTimeCreatable=True}">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Filter Section -->
        <WrapPanel Orientation="Horizontal" Grid.Row="0" Margin="0,10" VerticalAlignment="Top" HorizontalAlignment="Left" >
            <hc:ComboBox hc:InfoElement.Placeholder="Project"
                         Width="150"
                         Margin="10"
                         ItemsSource="{Binding Projects}"
                         SelectedItem="{Binding SelectedProject}" />


            <hc:ComboBox hc:InfoElement.Placeholder="Priority"
                         Width="150"
                         Margin="10"
                         ItemsSource="{Binding Priorities}"
                         SelectedItem="{Binding SelectedPriority}" />

            <hc:DatePicker hc:InfoElement.Placeholder="Date"
                           Margin="10"
                           Width="150"
                           SelectedDate="{Binding SelectedDate}" />

            <hc:ComboBox hc:InfoElement.Placeholder="Revit Version"
                         Width="150"
                         Margin="10"
                         ItemsSource="{Binding RevitVersionOptions}"
                         SelectedItem="{Binding SelectedRevitVersion}" />

            <Button Content="Apply"
                    Style="{StaticResource ButtonPrimary}"
                    Command="{Binding ApplyFilterCommand}"
                    Margin="10"
                    Width="100" />

            <Button Content="Reset"
                    Style="{StaticResource ButtonDanger}"
                    Command="{Binding ResetFilterCommand}"
                    Margin="10"
                    Width="100" />
        </WrapPanel>

        <!-- Issues Cards Display -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Issues}" Margin="10,10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <hc:Card Margin="10" Padding="8" Width="220" Height="250">
                            <!-- Priority / Assignee / Status -->
                            <hc:Card.Header>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="5">
                                    <TextBlock Text="{Binding Title}" Foreground="Black" FontWeight="Bold" Margin="4,0" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                        <TextBlock Text="{Binding Priority}" Foreground="#0078D7" FontWeight="SemiBold" Margin="4,0"/>
                                        <TextBlock Text="{Binding AssignedToUser}" Foreground="#666" Margin="4,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </hc:Card.Header>
                            <!-- Snapshot Image -->
                            <Button Command="{Binding DataContext.OpenIssueDetailsViewCommand,
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding .}"
                                    Background="Transparent" 
                                    BorderThickness="0" 
                                    Padding="0" 
                                    Height="160"
                                    Width="220"
                                    Cursor="Hand">
                                <Image Source="{Binding ImagePath}"
                                           Height="160"
                                           Margin="3"
                                           Stretch="Uniform"
                                           SnapsToDevicePixels="True"/>
                            </Button>


                            <!-- Date / Comment / Actions -->
                            <hc:Card.Footer>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <!-- Date -->
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM dd, yyyy}'}"
                                               Margin="5"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>

                                    <Button Command="{Binding DataContext.AddCommentCommand,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding .}"
                                            Content="Add Comment"
                                            Margin="5"/>
                                </StackPanel>
                            </hc:Card.Footer>
                        </hc:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</UserControl>
