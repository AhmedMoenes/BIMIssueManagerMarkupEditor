<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.Issues.IssuesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Issues"
             xmlns:viewModels="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Issues"
             xmlns:global="clr-namespace:"
             xmlns:issues="clr-namespace:BIMIssueManagerMarkupsEditor.ViewModels.Issues"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:IssuesViewModel, IsDesignTimeCreatable=True}">


    <Grid Margin="20,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Filter Section -->
        <WrapPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Top" HorizontalAlignment="Left" >
            <hc:ComboBox hc:InfoElement.Placeholder="Project"
                         Width="300"
                         Margin="0,10,10,10"
                         ItemsSource="{Binding Projects}"
                         SelectedItem="{Binding SelectedProject}" />


            <hc:ComboBox hc:InfoElement.Placeholder="Priority"
                         Width="300"
                         Margin="10"
                         ItemsSource="{Binding Priorities}"
                         SelectedItem="{Binding SelectedPriority}" />

            <hc:DatePicker hc:InfoElement.Placeholder="Date"
                           Width="300"
                           Margin="10"
                           SelectedDate="{Binding SelectedDate}" />

            <Button Style="{StaticResource ButtonPrimary}"
                    Command="{Binding ApplyFilterCommand}"
                    Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Path Width="16" Height="16"
                          Fill="White"
                          Stretch="Uniform"
                          Margin="0,0,8,0"
                          Data="{StaticResource Filter}"/>
                    <TextBlock Text="Apply" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ButtonDanger}"
                    Command="{Binding ResetFilterCommand}"
                    Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Path Width="16" Height="16"
                          Fill="White"
                          Stretch="Uniform"
                          Margin="0,0,8,0"
                          Data="{StaticResource Reset}"/>
                    <TextBlock Text="Reset" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Button>
        </WrapPanel>

        <!-- Issues Cards Display -->
        <hc:TabControl Grid.Row="1" ItemsSource="{Binding OpenTabs}" ShowCloseButton="True" Margin="0,10,0,0">
            <hc:Interaction.Triggers>
                <hc:RoutedEventTrigger RoutedEvent="hc:TabItem.Closed">
                    <hc:EventToCommand Command="{Binding CloseTabCommand}" CommandParameter="{Binding}" />
                </hc:RoutedEventTrigger>
            </hc:Interaction.Triggers>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl>
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="{x:Type issues:IssuesListTabViewModel}">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <!-- Your existing issues list content -->
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <ItemsControl ItemsSource="{Binding Issues}">
                                                            <!-- Your existing items template -->
                                                        </ItemsControl>
                                                    </ScrollViewer>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding}" Value="{x:Type global:IssueDetailsViewModel}">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <local:IssueDetailsTabView/>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </hc:TabControl>


    </Grid>
</UserControl>
