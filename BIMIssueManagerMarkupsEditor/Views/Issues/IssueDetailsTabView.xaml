<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.Issues.IssueDetailsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:BIMIssueManagerMarkupsEditor.Converters"
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Issues" 
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type= global:IssueDetailsViewModel }"
             Background="{StaticResource ContentBackgroundBrush}">

    <UserControl.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Margin="0,0,20,0">
            <StackPanel>

                <DockPanel LastChildFill="False" Margin="0,0,0,12">
                    <TextBlock Text="{Binding Issue.Title}" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                        <Button Command="{Binding MarkAsResolvedCommand}"
                                IsEnabled="{Binding Issue.IsResolved, Converter={StaticResource InverseBoolConverter}}"
                                Style="{StaticResource ButtonPrimary}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <Path Width="16" Height="16"
                                      Fill="White"
                                      Stretch="Uniform"
                                      Margin="0,0,8,0"
                                      Data="{StaticResource Resolved}"/>
                                <TextBlock Text="Mark as Resolved" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding AddCommentCommand}"
                                Style="{StaticResource ButtonPrimary}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <Path Width="16" Height="16"
                                      Fill="White"
                                      Stretch="Uniform"
                                      Margin="0,0,8,0"
                                      Data="{StaticResource Add}"/>
                                <TextBlock Text="Add Comment" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding DeleteIssueCommand}"
                                Style="{StaticResource ButtonDanger}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <Path Width="16" Height="16"
                                      Fill="White"
                                      Stretch="Uniform"
                                      Margin="0,0,8,0"
                                      Data="{StaticResource Delete}"/>
                                <TextBlock Text="Delete" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>

                <!--<Border BorderBrush="{StaticResource PrimaryBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,0,0,16"
                        Background="White">-->

                    <StackPanel>

                        <!-- Grid Info -->
                        <Grid Margin="0,0,0,12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="📁 Project:" FontWeight="SemiBold" FontSize="14" Margin="0,6"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Issue.ProjectName}" FontSize="13"
                                       FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="6,6,0,6"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="👤 Created By:" FontWeight="SemiBold" FontSize="14" Margin="20,6,0,6"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Issue.CreatedByUser}" FontSize="13"
                                       FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="6,6,0,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="🧑‍💻 Assigned To:" FontWeight="SemiBold" FontSize="14" Margin="0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Issue.AssignedToUser}" FontSize="13"
                                       FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="6,6,0,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="2" Text="⚡ Priority:" FontWeight="SemiBold" FontSize="14" Margin="20,6,0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Issue.Priority}" FontSize="13"
                                       FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="6,6,0,6"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="✔ Resolved:" FontWeight="SemiBold" FontSize="14" Margin="0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Issue.IsResolved}" FontSize="13" FontWeight="Bold"
                                       Foreground="{Binding Issue.IsResolved, Converter={StaticResource BoolToColorConverter}}" Margin="6,6,0,6"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" Text="🕒 Created At:" FontWeight="SemiBold" FontSize="14" Margin="20,6,0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Issue.CreatedAt, StringFormat='{}{0:dd-MM-yyyy HH:mm}'}"
                                       FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="6,6,0,6"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="📌 Area:" FontWeight="SemiBold" FontSize="14" Margin="0,6"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Issue.Area.AreaName}" FontSize="13" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}" Margin="6,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="2" Text="🏷 Labels:" FontWeight="SemiBold" FontSize="14" Margin="20,6,0,6"/>
                            <ItemsControl Grid.Row="3" Grid.Column="3" ItemsSource="{Binding Issue.Labels}" Margin="6,6,0,6">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LabelName}" FontSize="13" FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}" Margin="2,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>


                        <!-- 📝 Description -->
                        <TextBlock Text="📝 Description:" 
                                   FontWeight="Bold" FontSize="16"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,12,0,6"/>
                        <Border Background="#FAFAFA" Padding="10" CornerRadius="6">
                            <TextBlock Text="{Binding Issue.Description}"
                            TextWrapping="Wrap"
                            TextAlignment="Justify"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{StaticResource PrimaryBrush}"/>
                        </Border>
                    </StackPanel>
                <!--</Border>-->


                <!-- 💬 Comments -->
                <!--<Border BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,0">-->
                    <StackPanel>
                        <TextBlock Text="💬 Comments:" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,20,0,10"/>
                        <ItemsControl ItemsSource="{Binding Issue.Comments}" MinHeight="260">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#CCC" BorderThickness="1"
                                            CornerRadius="4" Margin="4" Padding="8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="13" Foreground="{StaticResource PrimaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding CreatedBy}" FontStyle="Italic" FontSize="11" Foreground="Gray"/>
                                                <TextBlock Text=" • " FontSize="11" Foreground="Gray" Margin="2,0"/>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" FontSize="11" Foreground="Gray"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                <!--</Border>-->
            </StackPanel>
        </ScrollViewer>

        <!-- 📷 Right: Snapshot full height -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top">
            <TextBlock Text="📷 Snapshot" FontWeight="SemiBold" FontSize="16" Margin="0,8,0,8"/>
            <Border BorderBrush="{StaticResource BackgroundBrush}" BorderThickness="1" CornerRadius="8">
                <Image Source="{Binding Issue.ImagePath}"
                       hc:Magnifier.Instance="{x:Static hc:Magnifier.Default}"
                       Stretch="Uniform"
                       MaxWidth="1000"
                       MinHeight="600"
                       Margin="6"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
