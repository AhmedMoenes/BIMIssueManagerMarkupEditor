<Window x:Class="BIMIssueManagerMarkupsEditor.Views.Viewer.AddIssueView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Viewer"
        mc:Ignorable="d"
        Title="Add Issue"
        Height="700" MaxHeight="900" MaxWidth="900"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/Icons/logo-in.png">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="pack://application:,,,/Resources/Icons/logo.png" Width="240" Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Form with Scrollable Right Column -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Stretch">
                <TextBlock Text="📁 Project" FontWeight="Bold" Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding Projects}"
                          DisplayMemberPath="ProjectName"
                          SelectedItem="{Binding SelectedProject}"
                          Height="35" Margin="0,0,0,10"/>

                <TextBlock Text="🧑‍💻 Assigned To" FontWeight="Bold" Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding Users}"
                          DisplayMemberPath="FullName"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding AssignedToUserId, Mode=TwoWay}"
                          Height="35" Margin="0,0,0,10"/>

                <TextBlock Text="📌 Area" FontWeight="Bold" Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding Areas}"
                          DisplayMemberPath="AreaName"
                          SelectedValuePath="AreaId"
                          SelectedValue="{Binding AreaId, Mode=TwoWay}"
                          Height="35" Margin="0,0,0,10"/>

                <TextBlock Text="📷 Snapshot" FontWeight="Bold" Margin="0,0,0,4"/>
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="6" Margin="0,0,0,10">
                    <Image Height="180" Stretch="UniformToFill"
                           Source="{Binding SnapshotImagePath}"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ButtonPrimary}" Width="40" Content="📷" ToolTip="Take Snapshot" Command="{Binding TakeSnapshotCommand}"/>
                </StackPanel>
            </StackPanel>

            <!-- Right Column -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10" VerticalAlignment="Top">
                    <TextBlock Text="💬Title" FontWeight="Bold" Margin="0,0,0,4"/>
                    <hc:TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Height="35" hc:InfoElement.Placeholder="Enter Issue Title"/>

                    <TextBlock Text="⚡Priority" FontWeight="Bold" Margin="0,10,0,4"/>
                    <ComboBox ItemsSource="{Binding Priorities}"
                              SelectedItem="{Binding PriorityChoice}" Height="35"/>

                    <TextBlock Text="🏷Labels" FontWeight="Bold" Margin="10,10,0,4"/>
                    <ComboBox ItemsSource="{Binding Labels}"
                              DisplayMemberPath="LabelName"
                              SelectedValuePath="LabelId"
                              SelectedItem="{Binding SelectedLabel, Mode=TwoWay}"
                              Height="35"/>

                    <TextBlock Text="📝 Description" FontWeight="Bold" Margin="0,10,0,4"/>
                    <hc:TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                Padding="6"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                TextWrapping="Wrap"
                                Height="200"
                                hc:InfoElement.Placeholder="Write Description Here"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Save Issue"
                    Command="{Binding SaveIssueCommand}"
                    hc:IconElement.Geometry="{StaticResource SaveGeometry}"
                    Style="{StaticResource ButtonPrimary}"
                    Width="100" Margin="0,0,10,0"/>
            
        </StackPanel>
    </Grid>
</Window>
