<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.Project.AddProjectView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:hc="https://handyorg.github.io/handycontrol"
                 xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Project"
                 xmlns:global="clr-namespace:"
                 mc:Ignorable="d" 
                 d:DataContext="{d:DesignInstance Type = local:AddProjectViewModel, IsDesignTimeCreatable=True}"
                 d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Projects}"
                      Grid.Column="0" Grid.RowSpan="2"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Project Name" Binding="{Binding ProjectName}" Width="Auto" />
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='{}{0:dd MMM, yyyy}'}" Width="Auto" />
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='{}{0:dd MMM, yyyy}'}"  Width="Auto" />
                <DataGridTextColumn Header="Issues" Binding="{Binding IssuesCount}" Width="Auto" />
                <DataGridTextColumn Header="Companies" Binding="{Binding CompanyNames.Count}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form-->
        <Expander Header="Create New Project" 
                      Grid.Column="1" 
                      Grid.Row="0"
                      Margin="5" 
                      IsExpanded="False">
            <StackPanel>
                <!-- Create Project Form -->
                <hc:TextBox hc:InfoElement.Placeholder="Project Name" Text="{Binding Project.ProjectName}" Margin="0,5"/>
                <hc:TextBox hc:InfoElement.Placeholder="Description" Text="{Binding Project.Description}" Margin="0,5"/>
                <hc:DatePicker hc:InfoElement.Placeholder="Start Date" SelectedDate="{Binding Project.StartDate}" Margin="0,5"/>
                <hc:DatePicker hc:InfoElement.Placeholder="End Date" SelectedDate="{Binding Project.EndDate}" Margin="0,5"/>

                <!-- Labels Section -->
                <TextBlock Text="Labels" FontWeight="Bold" Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBox Width="180" Text="{Binding NewLabelName, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Add" Command="{Binding AddLabelCommand}" Margin="5,0,0,0"/>
                </StackPanel>

                <hc:TagContainer ItemsSource="{Binding ProjectLabels}" Margin="3">
                    <hc:TagContainer.ItemTemplate>
                        <DataTemplate>
                            <hc:Tag Content="{Binding LabelName}" ShowCloseButton="False"/>
                        </DataTemplate>
                    </hc:TagContainer.ItemTemplate>
                </hc:TagContainer>

                <!-- Areas Section -->
                <TextBlock Text="Areas" FontWeight="Bold" Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBox Width="180" Text="{Binding NewAreaName, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Add" Command="{Binding AddAreaCommand}" Margin="5,0,0,0"/>
                </StackPanel>

                <hc:TagContainer ItemsSource="{Binding ProjectAreas}" Margin="3">
                    <hc:TagContainer.ItemTemplate>
                        <DataTemplate>
                            <hc:Tag Content="{Binding AreaName}" ShowCloseButton="False"/>
                        </DataTemplate>
                    </hc:TagContainer.ItemTemplate>
                </hc:TagContainer>


                <Button Content="Add Project" Grid.Row="0" Grid.Column="1"
                            Command="{Binding CreateProjectCommand}"
                            Style="{StaticResource ButtonPrimary}"
                            Width="100"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"/>
            </StackPanel>
        </Expander>

        <!-- Assign Companies Section -->
        <Expander Grid.Column="1" Header="Assign Companies To Projects" 
                      Margin="5"
                      Grid.Row="1">
            <StackPanel>
                <hc:ComboBox hc:InfoElement.Placeholder="Projects"
                                 ItemsSource="{Binding Projects}"
                                 DisplayMemberPath="ProjectName"
                                 SelectedItem="{Binding SelectedProject}"
                                 Margin="0,5"/>

                <hc:CheckComboBox hc:InfoElement.Placeholder="Companies"
                                      ItemsSource="{Binding Companies}"
                                      DisplayMemberPath="CompanyName"
                                      global:CheckComboBoxBehavior.SelectedItems="{Binding SelectedCompanies}"                                      Margin="0,5"/>
                <Button Content="Assign to Project"
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource ButtonPrimary}"
                            Command="{Binding AssignCompaniesCommand}"
                            Margin="0,10"/>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
