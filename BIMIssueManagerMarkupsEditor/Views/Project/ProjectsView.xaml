<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.Project.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type = local:ProjectsViewModel, IsDesignTimeCreatable=True}">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Search box on the left -->
            <hc:SearchBar Grid.Column="0"
                          hc:InfoElement.ShowClearButton="True"
                          hc:InfoElement.Placeholder="Search projects..."
                          HorizontalAlignment="Left"
                          Width="200"
                          Command="{Binding SearchCommand}" 
                          CommandParameter="{Binding Text, RelativeSource={RelativeSource Self}}"/>

            <!-- Add Project button -->
            <Button Grid.Column="1"
                    Content="Add Project"
                    Width="Auto"
                    Style="{StaticResource ButtonPrimary}"
                    Command="{Binding OpenAddProjectViewCommand}"
                    HorizontalAlignment="Right"
                    Margin="10,0,0,0"/>

            <!-- Assign Companies button -->
            <Button Grid.Column="2"
                    Content="Assign To Companies"
                    Width="Auto"
                    Style="{StaticResource ButtonPrimary}"
                    Command="{Binding OpenAssignCompaniesViewCommand}"
                    HorizontalAlignment="Right"
                    Margin="10,0,0,0"/>

            <!-- Delete Project button -->
            <Button Grid.Column="3"
                    Content="Delete Project"
                    Width="Auto"
                    Style="{StaticResource ButtonDanger}"
                    Command="{Binding DeleteSelectedProjectCommand}"
                    HorizontalAlignment="Right"
                    Margin="10,0,0,0"/>
        </Grid>

        <DataGrid ItemsSource="{Binding Projects}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  Grid.Row="1"
                  Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Project Name" Binding="{Binding ProjectName}" Width="Auto" />
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='{}{0:dd MMM, yyyy}'}" Width="Auto" />
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='{}{0:dd MMM, yyyy}'}" Width="Auto" />
                <DataGridTextColumn Header="Issues Count" Binding="{Binding IssuesCount}" Width="Auto" />
                <DataGridTextColumn Header="Companies In Project" Binding="{Binding CompanyNames.Count}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
