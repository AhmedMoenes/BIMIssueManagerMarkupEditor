<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.Company.AddCompanyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Company"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">


        <Grid ColumnSpan="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <!-- Data Grid (Left Column) -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding Companies}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Company Name" Binding="{Binding CompanyName}" Width="*" />
                    <DataGridTextColumn Header="Users" Binding="{Binding UsersCount}" Width="Auto" />
                    <DataGridTextColumn Header="Projects" Binding="{Binding ProjectsCount}" Width="Auto" />
                    <DataGridTextColumn Header="Issues" Binding="{Binding IssuesCount}" Width="Auto" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Form (Right Column) -->
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        VerticalAlignment="Top"
                        Margin="10,0,10,0">

                <hc:TextBox hc:InfoElement.Title="Company Name"
                            Text="{Binding Company.CompanyName, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,5"/>
                <Expander Header="Company Admin Info" IsExpanded="False" Margin="0,10">
                    <StackPanel>
                        <hc:TextBox hc:InfoElement.Placeholder="First Name"
                                    Text="{Binding Company.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,5"/>
                        <hc:TextBox hc:InfoElement.Placeholder="Last Name"
                                    Text="{Binding Company.LastName, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,5"/>
                        <hc:TextBox hc:InfoElement.Placeholder="Email"
                                    Text="{Binding Company.Email, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,5"/>
                        <hc:TextBox hc:InfoElement.Placeholder="Username"
                                    Text="{Binding Company.UserName, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,5"/>

                        <!-- No binding on Password; handle it-->
                        <hc:PasswordBox x:Name="PasswordBox"
                                        hc:InfoElement.Placeholder="Password"
                                        hc:InfoElement.ShowClearButton="True"
                                        Margin="0,5"/>
                    </StackPanel>
                </Expander>

                <Button Content="Add Company"
                           Style="{StaticResource ButtonPrimary}"
                           Command="{Binding CreateCompanyCommand}"
                           Width="100"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
