<Window x:Class="BIMIssueManagerMarkupsEditor.Views.Chat.CommentView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:hc="https://handyorg.github.io/handycontrol"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Chat"
                 mc:Ignorable="d"
                 Title="Comments" Height="500" Width="450">
    <DockPanel Margin="10">
        <!-- Comments List -->
        <Border DockPanel.Dock="Top"
                Height="220"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="5"
                Background="{StaticResource RegionBrush}">
            <StackPanel>
                <TextBlock Text="Comments:" 
                           FontWeight="Bold"
                           FontSize="12"
                           Margin="3,3"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding IssueComments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="4" 
                                        Padding="10"
                                        Margin="5"
                                        Background="White">
                                    <StackPanel VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Message}" 
                                                   TextWrapping="Wrap"
                                                   Style="{StaticResource TextBlockDefaultDanger}"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Left"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="By: " 
                                                       FontWeight="Bold"
                                                       FontSize="10"/>
                                            <TextBlock Text="{Binding CreatedBy}" 
                                                       Margin="5,0,10,0"
                                                       FontSize="10"/>
                                            <TextBlock Text="At: " 
                                                       FontWeight="Bold"
                                                       FontSize="10"/>
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}"
                                                       FontSize="10"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <hc:Divider Orientation="Horizontal" Margin="0,10"/>

        <!-- Comment Input -->
        <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
            <TextBox   hc:InfoElement.Placeholder="Write a Comment"
                       VerticalContentAlignment="Top"
                       Padding="5,5"
                       Style="{StaticResource TextBoxExtend}"
                       Text="{Binding CommentText, UpdateSourceTrigger=PropertyChanged}" 
                       AcceptsReturn="True" Height="80" Margin="0,10,0,15"/>
            <Button Content="Submit"
                        Width="80"
                        Style="{StaticResource ButtonPrimary}"
                        Command="{Binding SubmitCommand}" 
                        HorizontalAlignment="Right"/>
        </StackPanel>
    </DockPanel>
</Window>