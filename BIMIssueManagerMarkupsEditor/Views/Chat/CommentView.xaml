<Window x:Class="BIMIssueManagerMarkupsEditor.Views.Chat.CommentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.Chat"
             mc:Ignorable="d"
             Title="Comments" Height="500" Width="450">
    <DockPanel Margin="10">

        <!-- Comments List -->
        <ScrollViewer DockPanel.Dock="Top" Height="220">
            <ItemsControl ItemsSource="{Binding IssueComments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="#DDD" Padding="10" Margin="5" CornerRadius="4">
                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Divider -->
        <hc:Divider Orientation="Horizontal" Margin="0,10"/>

        <!-- Comment Input -->
        <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
            <TextBlock Text="Write a Comment:" FontWeight="Bold" FontSize="14"/>
            <TextBox Text="{Binding CommentText, UpdateSourceTrigger=PropertyChanged}" 
                     AcceptsReturn="True" Height="80" Margin="0,10,0,15"/>
            <Button Content="Submit"
                    Width="100"
                    Style="{StaticResource ButtonPrimary}"
                    Command="{Binding SubmitCommand}" 
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </DockPanel>
</Window>