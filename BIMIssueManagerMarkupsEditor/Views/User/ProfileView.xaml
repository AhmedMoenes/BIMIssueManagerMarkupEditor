<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.User.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.User"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="0,0,0,20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <hc:RunningBlock Grid.Row="0" HorizontalAlignment="Center" AutoRun="True"
                         Width="300"
                         Margin="20"
                         Content="MicroBIM - BIM Issues Manager"
                         FontSize="20" FontWeight="ExtraBold"
                         Foreground="Navy"
                         Duration="0:0:5"
                         BorderThickness="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition Width="1.6*" />
            </Grid.ColumnDefinitions>

            <!-- Identity Info -->
            <hc:UniformSpacingPanel Grid.Column="0" Orientation="Vertical" Spacing="10" Margin="10,10" HorizontalAlignment="Left" ItemHorizontalAlignment="Left">
                <Label Content="Full Name" Style="{DynamicResource LabelDefault.Small}" HorizontalAlignment="Left" Width="120" HorizontalContentAlignment="Left"/>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="Ahmed Moenes" />
                <Label Content="Email" Style="{DynamicResource LabelDefault.Small}" HorizontalAlignment="Left" Width="120" HorizontalContentAlignment="Left"/>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="amunes.f98@gmail.com" />
                <Label Content="Company" Style="{DynamicResource LabelDefault.Small}" HorizontalAlignment="Left" Width="120" HorizontalContentAlignment="Left"/>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="MicroBIM" HorizontalAlignment="Left" />
                <Label Content="Member Since" Style="{DynamicResource LabelDefault.Small}" HorizontalAlignment="Left" Width="120" HorizontalContentAlignment="Left"/>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="April 12, 2023" HorizontalAlignment="Left" />
                <Label Content="Projects Included" Style="{DynamicResource LabelDefault.Small}" HorizontalAlignment="Left" Width="120" HorizontalContentAlignment="Left"/>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="4" HorizontalAlignment="Left"/>
                <Label Content="Role" Style="{DynamicResource LabelDefault.Small}" HorizontalAlignment="Left" Width="120" HorizontalContentAlignment="Left"/>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="Editor" />
            </hc:UniformSpacingPanel>

            <!-- Divider -->
            <hc:Divider Grid.Column="1" Orientation="Vertical" Margin="20"/>

            <!-- Stats -->
            <hc:UniformSpacingPanel Grid.Column="2" Orientation="Vertical" Spacing="10" Margin="0,10" HorizontalAlignment="Left" ItemHorizontalAlignment="Left">
                <Label Content="Issues Created" Style="{DynamicResource LabelDefault.Small}" HorizontalAlignment="Left" Width="120" HorizontalContentAlignment="Left"/>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="12" HorizontalAlignment="Left"/>
                <Label Content="Issues Assigned" Style="{DynamicResource LabelDefault.Small}" HorizontalAlignment="Left" Width="120" HorizontalContentAlignment="Left"/>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="8" HorizontalAlignment="Left"/>
            </hc:UniformSpacingPanel>
        </Grid>
    </Grid>
</UserControl>
