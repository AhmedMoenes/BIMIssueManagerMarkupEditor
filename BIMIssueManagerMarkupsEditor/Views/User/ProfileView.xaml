<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.User.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.User"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="960">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔹 Profile Card -->
        <hc:Card Grid.Row="0" Padding="16" Margin="0,0,0,16">
            <hc:Card.Header>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Style="{StaticResource TextBlockTitleBold}" Text="{Binding CurrentUser.FullName}" />
                        <TextBlock Style="{StaticResource TextBlockSubTitle}" Text="{Binding CurrentUser.Email}" />
                </StackPanel>
            </hc:Card.Header>

            <Grid Margin="10">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CurrentUser.CompanyName}" Style="{StaticResource TextBlockLargeBold}" />
                    <TextBlock Text="{Binding CurrentUser.Role}" Style="{StaticResource TextBlockDefaultBold}" Margin="0,0,0,8" />

                    <WrapPanel Margin="0,6" HorizontalAlignment="Center">
                        <Border Background="#DDEEFF" CornerRadius="6" Padding="12" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Issues Created" FontWeight="SemiBold" Foreground="#173656"/>
                                <TextBlock Text="{Binding CurrentUser.IssuesCreatedCount}" FontSize="18" FontWeight="Bold" />
                            </StackPanel>
                        </Border>

                        <Border Background="#E5FAD5" CornerRadius="6" Padding="12" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Assigned Issues" FontWeight="SemiBold" Foreground="#173656"/>
                                <TextBlock Text="{Binding CurrentUser.IssuesAssignedCount}" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FFF4DD" CornerRadius="6" Padding="12" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Projects Joined" FontWeight="SemiBold" Foreground="#173656"/>
                                <TextBlock Text="{Binding CurrentUser.ProjectsIncludedCount}" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </hc:Card>

        <!-- 🔹 Dashboard Charts -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- 🥧 Pie Chart: Created Issues -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Margin="8" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Created Issues" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <lvc:PieChart Series="{Binding CreatedIssueSeries}"
                                  LegendPosition="Bottom"
                                  Width="250" Height="250"/>
                </StackPanel>
            </Border>

            <!-- 🥧 Pie Chart: Assigned Issues -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Margin="8" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Assigned Issues" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <lvc:PieChart Series="{Binding AssignedIssueSeries}"
                                  LegendPosition="Bottom"
                                  Width="250" Height="250"/>
                </StackPanel>
            </Border>

            <!-- 📊 Column Chart -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Margin="8" Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="Monthly Activity" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <lvc:CartesianChart Series="{Binding MonthlyActivitySeries}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}"
                                        Height="320"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
