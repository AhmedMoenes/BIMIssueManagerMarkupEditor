<UserControl x:Class="BIMIssueManagerMarkupsEditor.Views.User.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:local="clr-namespace:BIMIssueManagerMarkupsEditor.Views.User"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="960">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 👤 User Info (Avatar + Identity) -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 🟣 Avatar -->
                <Border Width="80" Height="80" Background="#FF173656" CornerRadius="40"
                VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Margin="12,0">
                    <Path Data="{StaticResource User}" Fill="White" Width="40" Height="40" Stretch="Uniform" Margin="20"/>
                </Border>

                <!-- 🔵 Name + Email -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="{Binding CurrentUser.FullName}" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Email:" FontSize="11" Foreground="Gray" Margin="0,4,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.Email}" FontSize="13" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- 🟢 Company + Role -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="Company:" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding CurrentUser.CompanyName}" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="Role:" FontSize="11" Foreground="Gray" Margin="0,6,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.Role}" FontSize="13" FontWeight="SemiBold" Foreground="DarkSlateGray"/>
                </StackPanel>
            </Grid>

            <!-- 📊 Stats Summary -->
            <UniformGrid Grid.Row="1" Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <!-- Created Issues -->
                <Border Background="#EDF4FF" CornerRadius="6" Padding="10" Margin="4">
                    <StackPanel>
                        <TextBlock Text="Created" FontWeight="SemiBold" Foreground="#173656"/>
                        <TextBlock Text="{Binding CurrentUser.IssuesCreatedCount}" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Issues" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Assigned Issues -->
                <Border Background="#E8FAE6" CornerRadius="6" Padding="10" Margin="4">
                    <StackPanel>
                        <TextBlock Text="Assigned" FontWeight="SemiBold" Foreground="#173656"/>
                        <TextBlock Text="{Binding CurrentUser.IssuesAssignedCount}" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Issues" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Projects Joined -->
                <Border Background="#FFF5E5" CornerRadius="6" Padding="10" Margin="4">
                    <StackPanel>
                        <TextBlock Text="Joined" FontWeight="SemiBold" Foreground="#173656"/>
                        <TextBlock Text="{Binding CurrentUser.ProjectsIncludedCount}" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Projects" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Grid>


        <!-- 🔹 Dashboard Charts -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Pie Chart: Created Issues -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Margin="8" Grid.Column="0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Created Issues" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Margin="0,0,0,25"/>
                    <lvc:PieChart Series="{Binding CreatedIssueSeries}"
                                  LegendPosition="Bottom"
                                  Width="250" Height="250"/>
                </StackPanel>
            </Border>

            <!-- Pie Chart: Assigned Issues -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Margin="8" Grid.Column="1">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Assigned Issues" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Margin="0,0,0,25"/>
                    <lvc:PieChart Series="{Binding AssignedIssueSeries}"
                                  LegendPosition="Bottom"
                                  Width="250" Height="250"/>
                </StackPanel>
            </Border>

            <!--    Column Chart -->
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Margin="8" Grid.Column="2">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Monthly Activity" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Margin="0,0,0,25"/>
                    <lvc:CartesianChart Series="{Binding MonthlyActivitySeries}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}"
                                        Height="320"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
